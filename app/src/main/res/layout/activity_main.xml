<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="连接"
        android:id="@+id/connect"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/connect_text"
        android:layout_toStartOf="@+id/connect_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/be_connect_button"
        android:text="被连接"
        android:layout_below="@+id/connect_text"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/connect_text"
        android:text="         "
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/progress_text"
        android:layout_alignStart="@+id/progress_text"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="对方mac地址:"
        android:id="@+id/textView"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/connect"
        android:layout_alignRight="@+id/connect_text"
        android:layout_alignEnd="@+id/connect_text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送"
        android:id="@+id/send"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="进度:"
        android:textSize="30sp"
        android:id="@+id/progress_text"
        android:layout_alignBottom="@+id/send"
        android:layout_toRightOf="@+id/send"
        android:layout_toEndOf="@+id/send"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="           "
        android:textSize="30sp"
        android:id="@+id/progress"
        android:layout_alignBottom="@+id/send"
        android:layout_toRightOf="@+id/progress_text"
        android:layout_toEndOf="@+id/progress_text"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="    "
        android:textColor="@android:color/white"
        android:id="@+id/textView4"
        android:layout_below="@+id/be_connect_button"
        android:layout_alignLeft="@+id/be_connect_button"
        android:layout_alignStart="@+id/be_connect_button"
        android:background="#ff000000"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文件地址："
        android:textSize="30sp"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2"
        android:layout_alignRight="@+id/textView4"
        android:layout_alignEnd="@+id/textView4"/>

</RelativeLayout>
